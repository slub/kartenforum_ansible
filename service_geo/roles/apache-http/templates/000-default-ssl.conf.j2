<IfModule mod_ssl.c>
    <VirtualHost {{ item }}:443>
        ServerName {{ item }}
        ServerAdmin {{ apache2.admin_mail }}

        # Deny serving files
        <Directory /var/www/html>
            Require all denied
        </Directory>

        # CORS support with preflight request
    #RewriteEngine On
    #RewriteCond %{REQUEST_METHOD} OPTIONS
    #RewriteRule ^(.*)$ $1 [R=200,L]
    #Header always set Access-Control-Allow-Headers  "Authorization,X-Requested-With,Accept,X-Auth-Token,Content-Length,Access-Control-Allow-Headers,Content-Type, Origin"
    #Header always set Access-Control-Allow-Origin "*"
    #Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE"

    # ProxyPass for Georeference application
    #ProxyRequests off
    #ProxyPreserveHost On
    <Location />
        # Check if the Origin header is set and capture its value
        SetEnvIf Origin "^http(s)?://(.+)$" ORIGIN=$0

        # Set CORS headers
        Header always set Access-Control-Allow-Headers  "Accept,Content-Length,Content-Type,Origin,Dev-Mode-Secret,Dev-Mode-Name"
        Header always set Access-Control-Allow-Origin "%{ORIGIN}e" env=ORIGIN
        Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS, DELETE"
        Header always set Access-Control-Allow-Credentials "true"

        # Handle OPTIONS (preflight) requests
        RewriteEngine On
        RewriteCond %{REQUEST_METHOD} OPTIONS
        RewriteRule ^(.*)$ $1 [R=200,L]

        # Proxy to georeference_api
        # ProxyRequests off
        ProxyPreserveHost On
        ProxyPass http://localhost:8000/
        ProxyPassReverse http://localhost:8000/
        #Order allow,deny
        #Allow from all
    </Location>

        # Available loglevels: trace8, ..., trace1, debug, info, notice, warn,
        # error, crit, alert, emerg.
        # It is also possible to configure the loglevel for particular
        # modules, e.g.
        # LogLevel trace4

        ErrorLog ${APACHE_LOG_DIR}/error.log
        CustomLog ${APACHE_LOG_DIR}/access.log combined

        # For most configuration files from conf-available/, which are
        # enabled or disabled at a global level, it is possible to
        # include a line for only one particular virtual host. For example the
        # following line enables the CGI configuration for this host only
        # after it has been globally disabled with "a2disconf".
        #Include conf-available/serve-cgi-bin.conf
        SSLCertificateFile {{ apache2.cert.cert }}
        SSLCertificateKeyFile {{ apache2.cert.key }}
        SSLCertificateChainFile {{ apache2.cert.chain }}
        SSLEngine on
    </VirtualHost>
</IfModule>
